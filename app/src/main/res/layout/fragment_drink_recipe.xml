<?xml version="1.0" encoding="utf-8"?>
<!--NestedScrollView because the normal one wasnt allowing bottom padding for some reason -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Ui.Screens.DrinkRecipeFragment">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/purple_50"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="35dp"
            android:paddingBottom="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/like_drink_img_view"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_heart_filled"
                    android:layout_margin="15dp"

                    />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_height="175dp"
                    android:layout_width="175dp"
                    tools:src="@tools:sample/avatars" />
            </LinearLayout>

            <TextView
                android:id="@+id/drink_name_tv"
                style="@style/Widget.MixerLogic.H2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_bold"
                android:textAlignment="center"
                tools:text="CINNAMINI" />

            <TextView
                style="@style/Widget.MixerLogic.H4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ingredients_header"
                android:textAlignment="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="15dp"
                android:paddingStart="25dp"
                android:id="@+id/ingredients_parent_layout"
                >



            </LinearLayout>

            <TextView
                android:id="@+id/how_to_mix_tv"
                style="@style/Widget.MixerLogic.H4"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:text="@string/how_to_mix_header"
                android:textAlignment="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="15dp"
                android:paddingStart="25dp"
                android:id="@+id/steps_parent_layout"
                >

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/teal_500"
                android:paddingStart="25dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        style="@style/Widget.MixerLogic.DrinkExtraDetailKeyText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/glass_txt" />

                    <TextView
                        android:id="@+id/drink_glass_tv"
                        style="@style/Widget.MixerLogic.DrinkExtraDetailValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="On The Rocks" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        style="@style/Widget.MixerLogic.DrinkExtraDetailKeyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/method_txt" />

                    <TextView
                        android:id="@+id/drink_method_tv"
                        style="@style/Widget.MixerLogic.DrinkExtraDetailValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Muddle &amp; Stir" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        style="@style/Widget.MixerLogic.DrinkExtraDetailKeyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/garnish_txt" />

                    <TextView
                        android:id="@+id/drink_garnish_tv"
                        style="@style/Widget.MixerLogic.DrinkExtraDetailValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Pineapple &amp; Cilantro" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.core.widget.NestedScrollView>
