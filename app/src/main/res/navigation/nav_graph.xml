<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/startupFragment">

    <fragment
        android:id="@+id/startupFragment"
        android:name="com.example.mixer_logic_kt.StartupFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_startup">
        <action
            android:id="@+id/action_startupFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_startupFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.mixer_logic_kt.RegisterFragment"
        android:label="@string/register_fragment_label"
        tools:layout="@layout/fragment_register"/>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.mixer_logic_kt.FavoritesFragment"
        android:label="@string/favourites_fragment_label"
        tools:layout="@layout/fragment_favorites" />
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.mixer_logic_kt.SignInFragment"
        android:label="@string/sign_in_fragment_label"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_allDrinksFragment"
            app:destination="@id/allDrinksFragment" />
    </fragment>
    <fragment
        android:id="@+id/allDrinksFragment"
        android:name="com.example.mixer_logic_kt.AllDrinksFragment"
        android:label="@string/recipes_fragment_label"
        tools:layout="@layout/fragment_all_drinks">
        <action
            android:id="@+id/action_allDrinksFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.mixer_logic_kt.ProfileFragment"
        android:label="@string/profile_fragment_label"
        tools:layout="@layout/fragment_profile" />
</navigation>